@using ProjetoFiap.Models
@{
    ViewData["Title"] = "Dados da turma";
}

@model Turma

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">
        @TempData["Erro"]
    </div>
}

<h2>Dados da turma</h2>
<form asp-action="Salvar" method="post">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label>Turma</label>
        <input type="text" class="form-control" asp-for="turma" required />
    </div>
    <div class="form-group">
        <label>Curso</label>
        <select asp-for="curso_id" class="form-control" required>
            <option value="0">Seleciona um curso</option>
            <option value="1">Curso 1</option>
            <option value="2">Curso 2</option>
            <option value="3">Curso 3</option>
            <option value="4">Curso 4</option>
            <option value="5">Curso 5</option>
        </select>
    </div>
    <div class="form-group">
        <label>Ano</label>
        <input type="text" class="form-control" asp-for="ano" required />
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index", "Turma")" class="btn btn-danger">Voltar</a>
</form>