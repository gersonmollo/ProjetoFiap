@using ProjetoFiap.Models
@{
    ViewData["Title"] = "Dados da turma";
}

@model AlunoTurma

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">
        @TempData["Erro"]
    </div>
}

<h2>Dados da turma</h2>
<form asp-action="Salvar" method="post">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label>Aluno</label>
        <select asp-for="aluno_id" class="form-control" required>
            <option value="0">Seleciona um aluno</option>
            @foreach (var item in Model.listaAlunosAtivos)
            {
                <option value="@item.id">@item.nome</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Turma</label>
        <select asp-for="turma_id" class="form-control" required>
            <option value="0">Seleciona uma turma</option>
            @foreach (var item in Model.listaTurmasAtivas) {
                <option value="@item.id">@item.turma</option>
            }
        </select>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index", "AlunoTurma")" class="btn btn-danger">Voltar</a>
</form>