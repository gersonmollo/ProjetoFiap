@using ProjetoFiap.Models
@{
    ViewData["Title"] = "Dados do aluno";
}

@model Aluno

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">
        @TempData["Erro"]
    </div>
}

<h2>Dados da turma</h2>
<form asp-action="Salvar" method="post">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label>Nome</label>
        <input type="text" class="form-control" asp-for="nome" required />
    </div>
    <div class="form-group">
        <label>Usuário</label>
        <input type="text" class="form-control" asp-for="usuario" required />
    </div>
    <div class="form-group">
        <label>Senha</label>
        <input type="text" class="form-control" asp-for="senha" required />
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index", "Aluno")" class="btn btn-danger">Voltar</a>
</form>